{% extends 'base.html.twig' %}

{% block title %}Customer{% endblock %}

{% block body %}
    <h1>Customer</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Идентификатор</th>
                <td>{{ customer.id }}</td>
            </tr>
            <tr>
                <th>Имя</th>
                <td>{{ customer.name }}</td>
            </tr>
            <tr>
                <th>Фамилия</th>
                <td>{{ customer.surname }}</td>
            </tr>
            <tr>
                <th>Телефон</th>
                <td>{{ customer.phone }}</td>
            </tr>
            <tr>
                <th>Почта</th>
                <td>{{ customer.email }}</td>
            </tr>
            <tr>
                <th>Образование</th>
                <td>{{ customer.Education }}</td>
            </tr>
            <tr>
                <th>Разрешение ОПДн</th>
                <td>{{ customer.pdProcessingPermission ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Подсчет</th>
                <td>{{ customer.score }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_customer_index') }}">back to list</a>

    <a href="{{ path('app_customer_edit', {'id': customer.id}) }}">edit</a>

    {{ include('customer/_delete_form.html.twig') }}
{% endblock %}
